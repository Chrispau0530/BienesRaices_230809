extends ../layout/index 

block contenido 
    .py-10 
        h1.text-4xl-10.font-extrabold.text-center Bienes 
            span.font-normal Raices 
        h2.text-center.text-2x1=page    

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow 
             form(action="").space-y-5.px-6     
                div
                     label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Nombre Completo :
                     input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400(type="text" name="Nombre del usuario" placeholder="Ingresa tu nombre con apellidos" )
                div    
                     label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Correo Electronico:
                     input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400(type="email" name="Correo_usuario " placeholder="Ingresa tu Correo electronico" ) 
                div    
                     label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Contraseña
                     input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400(type="password" name="password_usuario" placeholder="minimo de 8 caracteres" )
                div    
                     label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Confirmacion de contraseña:
                     input#passwordconfirm.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder.gray-400(type="password" name="validacion_contra" placeholder="Igual que la anterior" ) 

                div.flex.items-center.justify-between 
                     a.text-gray-500.text-xs(href="auth/login" class="hover:underline hover:decoration" )  
                     input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 hover:bg-indigo-700 text-while font-bold py-3 cursor-pointer")